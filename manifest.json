{
  "manifest_version": 3,
  "name": "LaunchCoin Tweet Watcher",
  "version": "1.5",
  "permissions": [
    "tabs",
    "scripting",
    "notifications",
    "alarms",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "LaunchCoin Watcher"
  },
  "host_permissions": [
    "*://twitter.com/*",
    "*://x.com/*"
  ],
  "icons": {
    "48": "icons/icon.png"
  }
}